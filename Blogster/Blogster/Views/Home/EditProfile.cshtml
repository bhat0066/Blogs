@using Microsoft.AspNetCore.Http;
@model Blogster.Models.Users
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Profile";
}

<div class="container" role="main">
    <form class="form-signin" asp-controller="Home" asp-action="UpdateProfile" asp-route-UserId="@Context.Session.GetInt32("UserId")" method="post">

        <div class="text-center mb-4">
            @if (@Context.Session.GetInt32("RoleId") == 1)
            {
                <h1 class="h3 mb-3 font-weight-normal">Edit Admin User</h1>
            }
            else
            {
                <h1 class="h3 mb-3 font-weight-normal">Edit Regular User</h1>
            }
        </div>

        <div class="form-group">
            <label for="LastName">First Name</label>
            <input type="text" name="FirstName" class="form-control" minlength="5" maxlength="50" value="@Model.FirstName" required>
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" name="LastName" class="form-control" minlength="5" maxlength="50" value="@Model.LastName" required>

        </div>

        <div class="form-group">
            <label for="EmailAddress">Email Address</label>
            <input type="email" name="EmailAddress" class="form-control" minlength="5" maxlength="50" value="@Model.EmailAddress" required>

        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" name="Password" class="form-control" minlength="5" maxlength="50" value="@Model.Password" required>

        </div>

        <div class="form-group">
            <label for="DateOfBirth">Date of Birth</label>
            <input type="date" name="DateOfBirth" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", Model.DateOfBirth)" data-val="true" required>

        </div>

        <div class="form-group">
            <label for="City">City</label>
            <input type="text" name="City" class="form-control" minlength="5" maxlength="50" value="@Model.City" required>

        </div>

        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" name="Address" class="form-control" minlength="5" maxlength="50" value="@Model.Address" required>

        </div>

        <div class="form-group">
            <label for="PostalCode">Postal Code</label>
            <input type="text" name="PostalCode" class="form-control" minlength="5" maxlength="50" value="@Model.PostalCode" required>

        </div>

        <div class="form-group">
            <label for="Country">Country</label>
            <input type="text" name="Country" class="form-control" minlength="5" maxlength="50" value="@Model.Country" required>
        </div>

        <button class="btn btn-outline-danger btn-sm" type="submit">Update User</button>
    </form>
</div>